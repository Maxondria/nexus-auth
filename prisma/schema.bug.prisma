datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator photon {
  provider = "prisma-client-js"
}

model Recipe {
  id          Int                  @default(autoincrement()) @id
  name        String               @default("")
  ingredients IngredientInRecipe[]
}

model IngredientInRecipe {
  id                 Int        @default(autoincrement()) @id
  quantity           Float
  ingredientInRecipe Ingredient @relation(fields: [ingredientId], references: [id])
  ingredientId       Int
  recipe             Recipe?    @relation(fields: [recipeId], references: [id])
  recipeId           Int?
}

model Ingredient {
  id                  Int                  @default(autoincrement()) @id
  name                String               @unique
  ingredientInRecipes IngredientInRecipe[]
}